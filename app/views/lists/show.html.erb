<% content_for(:title, "List | To Do") %>

<h1><%= @list.name %></h1>
<img src="<%= @list.image %>" />
<h3>Description: <%= @list.description %></h3>
<h3>Github link:<%= @list.githublink %></h3>
<h3>Live link:<%= @list.livelink %></h3>

<% if @list.tasks.any? %>
  <h4>Comments: </h4>
  <h1>
    <% @list.tasks.each do |task| %>
      <p>
        <%= task.description %> |
        <%= link_to "Edit", edit_list_task_path(@list, task) %> |
        <%= link_to "Delete", list_task_path(@list, task),
                                  :data => {:confirm => "Are you sure?",
                                                :method => "delete"} %>
        </p>
    <% end %>
  </h1>
<% else %>
  <p>There are no comments yet!</p>
<% end %>

<p><%= link_to "Add a task", new_list_task_path(@list) %></p>
<p><%= link_to "Edit List", edit_list_url %></p>
<p><%= link_to "Delete List", list_path(@list),
                          :data => {:confirm => "You sure?",
                                    :method => "delete"} %></p>

<p><%= link_to "Return to lists", lists_path %></p>
